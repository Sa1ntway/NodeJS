  <label for="login">Логин</label><br />
  <% if (typeof errMess !=='undefined') {%>
  <span><%= errMess %></span><br />
  <% } %> <input type="text" name="login" <%= (typeof login !== 'undefined') ?
  `value=${login}` : '' %>>
